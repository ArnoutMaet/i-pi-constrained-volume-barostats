<simulation mode="static" verbosity="medium">
    <output prefix='simulation'>
        <properties stride='1' filename='out'>  [ step, potential{electronvolt}] </properties>
        <trajectory stride="1" filename="pos_c" format="xyz"> x_centroid </trajectory>
        <trajectory stride="1" filename="frc_c" format="xyz"> f_centroid </trajectory>
        <trajectory stride="1" filename="pos" bead='0' format="xyz"> positions </trajectory>
	<trajectory stride="1" filename="frc" bead='0' format="xyz"> forces </trajectory>
   </output>
   <total_steps> 20 </total_steps>
   <ffsocket name="cbe" mode="unix" >
       <port> 33334 </port> 
       <address> localhost </address> 
   </ffsocket>
   <system >
       <initialize nbeads='1'> 
           <file mode='xyz' >  init.xyz </file>
           <cell mode='abc'> [200.0,  200.0,  200.0  ] </cell>
       </initialize>
       <forces>
          <force forcefield="cbe"> </force>
       </forces>
       <motion mode="minimize">
            <optimizer mode="bfgs">
                <tolerances>
                    <energy> 5e-5 </energy>
                    <force> 5e-5</force>
                    <position> 5e-5 </position>
                </tolerances>
           </optimizer>
       </motion>
   </system>
</simulation>
