<simulation mode="static" verbosity="medium">
    <output prefix='inst'>
        <properties stride='1' filename='out'>  [ step, potential{electronvolt}] </properties>
        <trajectory filename='raw' stride='1' extra_type='raw'> extras </trajectory>
        <trajectory filename='fric' stride='1' extra_type='friction'> extras </trajectory>
   </output>
   <total_steps>30     </total_steps>
  <ffsocket name='aims' mode='unix'>
    <address> localhost </address>
  </ffsocket>
   <system >
       <initialize nbeads='16'>
           <file mode='xyz' >  init.xyz </file>
           <cell mode='abc' units='angstrom'> [3.9408969800000002,3.9408969800000002,3.9408969800000002] </cell>
       </initialize>
       <forces>
       <force forcefield="aims">
          <force_extras>['friction']</force_extras>
       </force>
       </forces>
       <ensemble>
           <temperature units="kelvin">120</temperature>
       </ensemble>
       <motion mode='instanton'>
           <instanton mode='rate'>
               <tolerances>
                   <energy> 1e-3 </energy>
                   <force> 2e-4 </force>
                   <position> 1e-3 </position>
               </tolerances>
               <opt>nichols</opt>
               <delta>0.1</delta>
               <alt_out>1</alt_out>
               <hessian_update>powell</hessian_update>
               <friction>true</friction>
               <!--<fric_hessian mode='file' shape='(16,15,15,15)' >hessian_fric.dat</fric_hessian>-->
               <z_friction mode='file' shape='(999, 2)' > z_friction.dat </z_friction>
               <hessian_init>true</hessian_init>
               <hessian_final>true</hessian_final>
               <hessian_asr>none</hessian_asr>
               <biggest_step>0.1</biggest_step>
           </instanton>
       </motion>
   </system>
</simulation>
